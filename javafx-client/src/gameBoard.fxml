<GridPane style="-fx-background-color: #027511;" stylesheets="@css/gameBoard.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameBoardController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER" />
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="NEVER" />
    </rowConstraints>
    <children>
        <fx:include source="playerHand.fxml" fx:id="playerTopLeft" GridPane.columnIndex="1" />
        <fx:include source="playerHand.fxml" fx:id="playerTopRight" GridPane.columnIndex="2" />
        <fx:include source="playerHand.fxml" fx:id="playerLeft" GridPane.rowSpan="3" alignment="CENTER" />
        <fx:include source="playerHand.fxml" fx:id="playerRight" GridPane.columnIndex="3" GridPane.rowSpan="3" />
        <fx:include source="playerHand.fxml" fx:id="playerBottomLeft" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <fx:include source="playerHand.fxml" fx:id="playerBottomRight" GridPane.columnIndex="2" GridPane.rowIndex="2" />

        <GridPane fx:id="tableCenter" alignment="CENTER" hgap="5.0" vgap="5.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <fx:include source="card.fxml" fx:id="tableCenterCard1" GridPane.halignment="CENTER" />
                <fx:include source="card.fxml" fx:id="tableCenterCard2" GridPane.halignment="CENTER" GridPane.columnIndex="1" />
                <fx:include source="card.fxml" fx:id="tableCenterCard3" GridPane.halignment="CENTER" GridPane.columnIndex="2" />
                <fx:include source="card.fxml" fx:id="tableCenterCard4" GridPane.halignment="CENTER" GridPane.columnIndex="3" />
                <fx:include source="card.fxml" fx:id="tableCenterCard5" GridPane.halignment="CENTER" GridPane.columnIndex="4" />
                <Label fx:id="tableCenterPotLabel" alignment="CENTER" contentDisplay="CENTER" GridPane.columnSpan="5" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </children>
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </GridPane>
    </children>
</GridPane>
